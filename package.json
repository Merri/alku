{
	"name": "alku",
	"type": "module",
	"version": "1.1.0-rc.30",
	"description": "We are divergent. The CSS framework for people who desire to have more accessible defaults.",
	"main": "index.css",
	"scripts": {
		"build": "npx postcss src/*.css --dir ./ && npm run build-index && npm run build-alku && npm run build-list && npm run build-text",
		"build-alku": "cat ./src/alku-*.css | npx postcss > ./alku.css",
		"build-index": "cat ./src/*.css | npx postcss > ./index.css",
		"build-list": "cat ./src/list-*.css | npx postcss > ./list.css",
		"build-text": "cat ./src/text-*.css | npx postcss > ./text.css",
		"win-shell-bash": "npm config set script-shell \"C:\\\\Program Files\\\\git\\\\bin\\\\bash.exe\"",
		"win-shell-none": "npm config delete script-shell"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/Merri/alku.git"
	},
	"keywords": [
		"classless-css",
		"css",
		"css-framework",
		"css-reset",
		"css-utilities",
		"css-variables",
		"html-attributes",
		"normalize-css",
		"postcss"
	],
	"author": "Vesa Piittinen",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/Merri/alku/issues"
	},
	"homepage": "https://github.com/Merri/alku#readme",
	"devDependencies": {
		"astro": "4.4.0",
		"cssnano": "6.0.3",
		"postcss": "8.4.35",
		"postcss-cli": "11.0.0",
		"react": "18.2.0"
	}
}
